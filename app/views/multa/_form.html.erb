<%= form_with(model: multum) do |form| %>
  <% if multum.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(multum.errors.count, "error") %> prohibited this multum from being saved:</h2>

      <ul>
        <% multum.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :valor, style: "display: block" %>
    <%= form.text_field :valor %>
  </div>

  <div>
    <%= form.label :fecha, style: "display: block" %>
    <%= form.date_field :fecha %>
  </div>

  <div>
    <%= form.label :estado, style: "display: block" %>
    <%= form.check_box :estado %>
  </div>

  <div>
  Prestamo:
  <br>
  <%= form.select :Prestamo_id, options_for_select(Prestamo.all.map{|s| [s.id.to_s + " - Realizado por " + s.Usuario.nombres + " " + s.Usuario.apellidos + " en " + s.fecha.to_s, s.id]}) %>
  </div>
  <br>
 

  <div>
    <%= form.submit %>
  </div>
<% end %>

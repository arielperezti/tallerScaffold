<%= form_with(model: prestamo) do |form| %>
  <% if prestamo.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(prestamo.errors.count, "error") %> prohibited this prestamo from being saved:</h2>

      <ul>
        <% prestamo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :fecha, style: "display: block" %>
    <%= form.date_field :fecha %>
  </div>

  <div>
    <%= form.label :estado, style: "display: block" %>
    <%= form.check_box :estado %>
  </div>

  <div>
    Usuario:
    <br>
    <%= form.select :Usuario_id, options_for_select(Usuario.all.map{|s| [s.id.to_s + " - " + s.nombres + " " + s.apellidos, s.id]}) %>
  </div>

  <br>

  <div>
    <%= form.submit %>
  </div>
<% end %>
